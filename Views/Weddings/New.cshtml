@using Project.Models
@model Wedding

    @{
    ViewData["Title"] = "Wedding Details";
    }

    <div class="text-center">
        <h1 class="display-4">Plan your Wedding</h1>
    </div>

    <div class="container">
    <div class="row">
        <div class="col-lg">

            <form asp-action="Create" asp-controller="Weddings" method="post">
                <!--Name Wedder One -->
                <div class="form-group">
                    <span asp-validation-for="NameWedderOne"></span>
                    <label asp-for="NameWedderOne">Wedder One:</label>
                    <input type="text" class="form-control" asp-for="NameWedderOne" placeholder="">
                </div>

                <!-- Name Wedder Two -->
                <div class="form-group">
                    <span asp-validation-for="NameWedderTwo"></span>
                    <label asp-for="NameWedderTwo">Wedder Two:</label>
                    <input type="text" class="form-control" asp-for="NameWedderTwo" placeholder="">
                </div>
                <!-- Day -->
                <div class="form-group">
                    <span asp-validation-for="Day"></span>
                    <label asp-for="Day">Date:</label>
                    @Html.EditorFor(model => model.Day, new { htmlAttributes = new { @class = "form-control" }
                    })
                </div>
                <!-- Address -->
                <div class="form-group">
                    <span asp-validation-for="Address"></span>
                    <label asp-for="Address">Address:</label>
                    <input type="text" class="form-control" asp-for="Address" placeholder="">
                </div>

                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
    </div>
</div>




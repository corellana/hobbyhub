@using Project.Models
@model Hobby

@{
ViewData["Title"] = "Edit Hobby";
}

<div class="text-center">
    <h1 class="display-4">Edit a Hobby</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg">

            <form action="/hobbies/@Model.HobbyId" method="post">
                <!-- Name -->
                <div class="form-group">
                    <span asp-validation-for="Name"></span>
                    <label asp-for="Name">Name:</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="">
                </div>
                <!-- Details -->
                <div class="form-group">
                    <span asp-validation-for="Description"></span>
                    <label asp-for="Description">Description:</label>
                    <textarea class="form-control" id="" rows="3" asp-for="Description"
                        placeholder="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Update</button>
            </form>
        </div>
    </div>
</div>
<!-- Basic Links -->
<a href="/hobbies" class="btn btn-link footer-button">Home</a>
<a href="/logout" class="btn btn-link footer-button">Log out</a>
@using Project.Models
@model User

@{
ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to my bakan App</h1>
</div>

<div class="row">
    <div class="container col-6">
    <div class="row">
        <div class="text-center">
            <h1 class="display-4">Login</h1>
        </div>
        <div class="container user">
            <div class="row">
                <div class="col-lg">
                    <form asp-action="Login" asp-controller="Users" method="post">
                        <!-- Email -->
                        <div class="form-group">
                            <span asp-validation-for="Email"></span>
                            <label asp-for="Email">Email:</label>
                            <input type="text" class="form-control" asp-for="Email" placeholder="Your Email">
                        </div>
                        <!-- Password -->
                        <div class="form-group">
                            <span asp-validation-for="Password"></span>
                            <label asp-for="Password">Password:</label>
                            <input type="password" class="form-control" asp-for="Password">
                        </div>
                        <!-- Submit -->
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>

        <a href="/register" class="btn btn-link">Need to register?</a>
    </div>
</div>

<div class="container col-6">
    <div class="row">
        <div class="text-center">
            <h1 class="display-4">Signup</h1>
        </div>
        <div class="container user">
            <div class="row">
                <div class="col-lg">
                    <form asp-action="Register" asp-controller="Users" method="post">
                        <!-- First Name -->
                        <div class="form-group">
                            <span asp-validation-for="Name"></span>
                            <label asp-for="Name">Name:</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                        </div>
                        <!-- Email -->
                        <div class="form-group">
                            <span asp-validation-for="Email"></span>
                            <label asp-for="Email">Email:</label>
                            <input type="text" class="form-control" asp-for="Email" placeholder="Your Email">
                        </div>
                        <!-- Password -->
                        <div class="form-group">
                            <span asp-validation-for="Password"></span>
                            <label asp-for="Password">Password:</label>
                            <input type="password" class="form-control" asp-for="Password">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="Confirm"></span>
                            <label asp-for="Confirm">Confirm Password:</label>
                            <input type="password" class="form-control" asp-for="Confirm">
                        </div>
                        <!-- Submit -->
                        <p>By clicking on Sign up, you agree to <a href="/users/login" class="btn btn-link">Carito's
                                Terms and Conditions of Use.</a></p>
                        <button type="submit" class="btn btn-success btn-block">Submit</button>
                        <p class="question">Already have an account?<a href="/login" class="btn btn-link">Login</a></p>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
</div>

@* Ideas List *@
<div class="container">
    <div class="row">
        <div class="col-lg">
            @{foreach (Idea idea in ViewBag.AllIdeas){
            <div class="border idea-list">
                <p><span class="font-weight-bold">@idea.Creator.Alias</span> says:</p>
                <p><span class=" detail-idea">@idea.Detail</span></p>
            </div>
            <div class="container">
                <div class="row">
                    <div class="row actions-container">
                            @if (idea.Liking.Count <= 1)
                            {
                                <p>@idea.Liking.Count person like this.</p>
                            }
                            else{
                                <p>@idea.Liking.Count people like this.</p>
                            }
                        
                            @* Likes and Delete Actions *@
                            @if(@idea.Creator.UserId == ViewBag.CurrentUser.UserId)
                            {
                                <form action="/ideas/@idea.IdeaId/destroy" method="post">
                                <button class="btn btn-outline-dark dark-button">Delete</button>
                                </form>
                            //REPASAR
                            }
                            <form action="/ideas/@idea.IdeaId/rsvp" method="post">
                                <button class="btn btn-outline-dark dark-button">Like</button>
                            </form>
                    </div>
                </div>
            </div>

            }}
        </div>
    </div>
</div>


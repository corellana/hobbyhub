@using Project.Models
@model Idea

@{
ViewData["Title"] = "Bright Ideas";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Bright Ideas App</h1>
</div>
@* Hi *@
<div class="container">
    <div class="row">
        <div class="hi">
            <h2>Hi @ViewBag.CurrentUser.Alias!</h2>
        </div>

    </div>
</div>

@* Create an Idea *@
<div class="container">
    <div class="row">
        <div class="col-lg create-idea">
            <h3>
                </p>Create a new bright Idea:</h3>
            <form asp-action="Create" asp-controller="Ideas" method="post">
                <!-- Details -->
                <div class="form-group">
                    <span asp-validation-for="Detail"></span>
                    <label asp-for="Detail">Detail:</label>
                    @* <input type="textarea" class="form-control" asp-for="Detail" placeholder=""> *@
                    <textarea class="form-control" id="" rows="3" asp-for="Detail"
                        placeholder="Your bright idea"></textarea>
                </div>
                <button type="submit" class="btn btn-success float-right">Add Idea</button>
            </form>
        </div>
    </div>
</div>

